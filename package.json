{
  "name": "VoiScripter",
  "version": "0.2.4",
  "description": "音声合成ソフトの台本作成支援ツール",
  "author": "あおもや",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "electron-forge start",
    "lint": "next lint",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on tcp:3000 && cross-env NODE_ENV=development electron .\"",
    "electron-build": "npm run build && npx electron-builder --win --publish never",
    "electron-pack": "npm run build && npx electron-builder --dir --win",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@heroicons/react": "^2.1.1",
    "electron-squirrel-startup": "^1.0.1",
    "next": "^16.0.10",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^20.19.26",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.0.10",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-recess-order": "^7.4.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.voiscripter.app",
    "productName": "VoiScripter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "public/**/*",
      "node_modules/**/*",
      "!node_modules/.cache/**/*",
      "!node_modules/**/test/**/*",
      "!node_modules/**/tests/**/*",
      "!node_modules/**/docs/**/*",
      "!node_modules/**/examples/**/*",
      "!node_modules/**/.git/**/*",
      "!node_modules/**/.github/**/*",
      "!node_modules/**/.vscode/**/*",
      "!node_modules/**/.idea/**/*",
      "!node_modules/**/coverage/**/*",
      "!node_modules/**/.nyc_output/**/*"
    ],
    "extraFiles": [
      {
        "from": "node_modules/electron/dist/ffmpeg.dll",
        "to": "ffmpeg.dll"
      }
    ],
    "extraResources": [
      {
        "from": "out",
        "to": "out"
      }
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity",
      "icon": "public/favicon.ico"
    },
    "win": {
      "target": "portable",
      "icon": "public/favicon.ico"
    },
    "electronVersion": "39.2.7",
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "electronDist": "node_modules/electron/dist",
    "linux": {
      "target": "AppImage"
    }
  }
}
